<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Server Action for Action menu -->
    <record id="action_mrp_production_schedule_export_product_demand" model="ir.actions.server">
        <field name="name">Export Product Demand</field>
        <field name="model_id" ref="mrp_mps.model_mrp_production_schedule"/>
        <field name="binding_model_id" ref="mrp_mps.model_mrp_production_schedule"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_export_product_demand()
        </field>
    </record>

    <!-- Inherit MRP Production Schedule form view to add button in header -->
    <record id="mrp_production_schedule_view_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.schedule.form.inherit.product.demand</field>
        <field name="model">mrp.production.schedule</field>
        <field name="inherit_id" ref="mrp_mps.mrp_mps_production_schedule_form_view"/>
        <field name="arch" type="xml">
            <!-- Add header with Product Demand button -->
            <form position="inside">
                <header>
                    <button name="action_export_product_demand"
                            string="Product Demand"
                            type="object"
                            class="btn-primary"
                            groups="mrp.group_mrp_user"/>
                </header>
            </form>

            <!-- Add hidden fields at the end of form -->
            <xpath expr="//form" position="inside">
                <group invisible="1">
                    <field name="excel_file" invisible="1"/>
                    <field name="excel_filename" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
