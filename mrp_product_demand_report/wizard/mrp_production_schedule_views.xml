<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the MRP Production Schedule wizard form view -->
    <record id="mrp_production_schedule_view_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.schedule.form.inherit</field>
        <field name="model">mrp.production.schedule</field>
        <field name="inherit_id" ref="mrp_mps.mrp_production_schedule_view_form"/>
        <field name="arch" type="xml">
            <!-- Add Product Demand button in the header -->
            <xpath expr="//header" position="inside">
                <button name="action_export_product_demand"
                        string="Product Demand"
                        type="object"
                        class="btn-primary"/>
            </xpath>

            <!-- Add fields for file download (hidden) -->
            <xpath expr="//sheet" position="after">
                <group invisible="1">
                    <field name="excel_file" invisible="1"/>
                    <field name="excel_filename" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
